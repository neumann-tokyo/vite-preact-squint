{
	"name": "web",
	"dockerComposeFile": ["../docker-compose.yml"],
	"service": "web",
	"workspaceFolder": "/home/alice/web",
	"postAttachCommand": "git config --global core.pager \"less -FX\" && sudo chown -R alice:alice /home/alice/",
	"shutdownAction": "stopCompose",
	"initializeCommand": "ls",
	"containerUser": "alice",
	"customizations": {
		"vscode": {
			"extensions": [
				"wmaurer.change-case",
				"sleistner.vscode-fileutils",
				"usernamehw.errorlens",
				"albymor.increment-selection",
				"huizhou.githd",
				"GitHub.github-vscode-theme",
				"naumovs.color-highlight",
				"betterthantomorrow.calva",
				"hoovercj.vscode-power-mode",
				"Mtuan.typing-sounds"
			],
			"settings": {
				"editor.formatOnSave": true,
				"editor.formatOnSaveMode": "file",
				"files.insertFinalNewline": true,
				"terminal.integrated.defaultProfile.linux": "bash",
				"terminal.integrated.profiles.linux": {
					"bash": { "path": "/bin/bash" }
				},
				"workbench.colorTheme": "GitHub Dark Colorblind (Beta)",
				"powermode.presets": "fireworks",
				"powermode.enabled": true,
				"powermode.combo.counterEnabled": "show",
				"powermode.combo.location": "editor",
				"powermode.combo.timerEnabled": "show",
				"powermode.shake.enabled": false
			}
		}
	}
}
